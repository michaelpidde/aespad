<Window x:Class="AesPad.PasswordPromp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AesPad"
        mc:Ignorable="d"
        Title="PasswordPromp" Height="156.898" Width="400" WindowStyle="None" ResizeMode="NoResize" Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,10">
        <Button x:Name="enter" Content="Enter" HorizontalAlignment="Left" Margin="315,126,0,0" VerticalAlignment="Top" Width="75" Click="enter_Click"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Width="300" Height="20"/>
        <Label Content="AesPad" HorizontalAlignment="Center" Margin="10,20,10,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" FontFamily="Lucida Calligraphy" Width="380" HorizontalContentAlignment="Center"/>
        <Label Content="Enter session password:" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
